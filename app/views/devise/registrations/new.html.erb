<% content_for(:title, '新規登録') %>
<% content_for :extra_head do %>
  <meta name="description" content="新規登録画面です。">
<% end %>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="h-[80svh] flex flex-col justify-center items-center">
  <h2 class="text-xl pb-2">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field pt-2">
      <%= f.label :email, class: "block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="field pt-2">
      <%= f.label :name, class: "block" %>
      <%= f.text_field :name, autocomplete: "name", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="field pt-2">
      <%= f.label :password, "パスワード" + (@minimum_password_length ? " ※#{@minimum_password_length}文字以上" : ""), class: "block" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="field pt-2">
      <%= f.label :password_confirmation, class: "block" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="actions pt-4">
      <%= f.submit "登録する", class: "py-2 bg-neutral-100 w-[40svh] rounded-md shadow-md cursor-pointer hover:bg-opacity-50" %>
    </div>
  <% end %>

  <div class="field flex-col flex justify-center items-center pt-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
