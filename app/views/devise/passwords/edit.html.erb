<% content_for(:title, 'パスワード再設定') %>
<% content_for :extra_head do %>
  <meta name="description" content="パスワード再設定画面です。">
<% end %>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="h-[80svh] flex flex-col justify-center items-center space-y-4">
  <h2 class="text-xl pb-2">パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field pt-2">
      <%= f.label :password, "新しいパスワード" + (@minimum_password_length ? " ※#{@minimum_password_length}文字以上" : ""), class: "block" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block rounded-md  w-[40svh]" %>
    </div>

    <div class="field pt-2">
      <%= f.label :password_confirmation, "新しいパスワード（確認用）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="actions pt-4">
      <%= f.submit "パスワードを再設定する", class: "py-2 bg-neutral-100 w-[40svh] rounded-md shadow-md cursor-pointer hover:bg-opacity-50" %>
    </div>
  <% end %>

  <div class="field flex-col flex justify-center items-center pt-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
