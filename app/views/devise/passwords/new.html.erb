<% content_for(:title, 'パスワード再設定') %>
<% content_for :extra_head do %>
  <meta name="description" content="パスワード再設定用のメールアドレス入力画面です。">
<% end %>

<%= render "devise/shared/error_messages", resource: resource %>

<div class="h-[80svh] flex flex-col justify-center items-center">
  <h2 class="text-xl pb-2">パスワード再設定</h2>
  <p class="text-sm mx-10">erasugi.info@gmail.comからのメールを受信できるように設定してください</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="field pt-2">
      <%= f.label :email, class: "block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block rounded-md w-[40svh]" %>
    </div>

    <div class="actions py-4">
      <%= f.submit "パスワード再設定用のメールを送る", class: "py-2 bg-gray-100 w-[40svh] rounded-md shadow-md cursor-pointer hover:bg-opacity-50" %>
    </div>
  <% end %>

  <div class="field flex-col flex justify-center items-center pt-8">
    <%= render "devise/shared/links" %>
  </div>
</div>
