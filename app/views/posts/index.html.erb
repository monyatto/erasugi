<% content_for(:title, '投稿一覧') %>
<%= render "layouts/unlogin" %>
<div class="swiper" id="swiper_id" data-controller="scroll" data-scroll-posts-ids-value="<%= @posts.pluck(:id) %>">
  <div class="swiper-wrapper">
    <% @posts.each do |post| %>
      <div class="swiper-slide flex flex-col justify-center select-none" id="loading">
        <div data-controller="reaction" data-reaction-post-id-value="<%= post.id %>" data-reaction-first-post-id-value="<%= @posts.first.id %>" data-reaction-associated-reactions-value="<%= post.reactions_count %>">
          <div class="flex justify-center mb-[20svh] px-5 sm:px-0">
            <p class="text-4xl break-words text-center leading-relaxed font-black bg-white bg-opacity-50"><%= post.content %></p>
          </div>
          <div class="flex flex-wrap justify-center gap-2 px-10 sm:px-0">
            <button data-action="reaction#onButtonClick" class="absolute bottom-32 h-20 hover:h-[79px] active:h-[69px] w-32 bg-stone-100 border-l-10 border-l-stone-50 border-r-10 border-r-stone-200 border-b-15 hover:border-b-14 active:border-b-4 border-b-stone-300 border-b-stone-300 rounded-md text-neutral-500 opacity-80 hover:opacity-80 active:opacity-80" id="button-off">えらい</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="swiper-button-next" id="swiper-button-next"></div>
<div class="swiper-button-prev" id="swiper-button-prev"></div>
<div class="swiper-pagination"></div>
