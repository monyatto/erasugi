<div class="h-[100vh]">
<div id="container" style="position: absolute;"></div>
  <div class="swiper" id="swiper_id"  data-controller="scroll" data-scroll-posts-ids-value='<%= @posts.pluck(:id) %>'>
  <div class="swiper-wrapper mt-44">
    <% @posts.each do |post| %>
      <div class="swiper-slide">
        <div data-controller="reaction" data-reaction-post-id-value=<%= post.id %> data-reaction-first-post-id-value=<%= @posts.first.id %> data-reaction-reactions-type-ids-value="<%= post.associated_reaction_type_ids %>">
          <%= post.id %>
          <div class="text-[60px]">
            <%= post.content %>
          </div>
          <div class="flex justify-center">
            <% @reactions_types.each do |reactions_type| %>
              <button data-action="reaction#onButtonClick" data-reaction-reaction-type-id-param="<%= reactions_type.id %>" class="btn text-lg m-10 w-24 h-24 rounded-full drop-shadow-md bg-white"><%= reactions_type.name %></button>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="swiper-button-next"></div>
<div class="swiper-button-prev"></div>
</div>
